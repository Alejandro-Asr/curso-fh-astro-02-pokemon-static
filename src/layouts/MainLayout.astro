---
import { ClientRouter } from 'astro:transitions';
import { siteInfo } from 'src/consts/site-info';
import NavBar from 'src/shared/NavBar.astro';

interface Props {
  title?: string;
  image?: string;
  description?: string;
}

const {
  title = siteInfo.title,
  description = siteInfo.description,
  image,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- SEO -->
    <meta name="description" content={description} />
    <meta name="author" content={'Alejandro SÃ¡nchez'} />

    <!-- OG Metatags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <title>{title}</title>
    <ClientRouter />
    <!-- Transicion sin javascripts -->
    <!-- <style>
      @view-transition {
        navigation: auto;
      }
    </style> -->
  </head>
  <body class="bg-slate-800 text-slate-100 flex flex-col min-h-screen">
    <NavBar />
    <main class="mt-10 mx-auto flex-grow w-full max-w-4xl px-4">
      <slot />
    </main>
  </body>
</html>
